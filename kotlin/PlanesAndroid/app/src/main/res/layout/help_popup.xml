<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_start">

    <TextView
        android:id="@+id/popup_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/help"/>
    <TextView
        android:id="@+id/popup_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_below="@+id/popup_help_title"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/popup_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dip"
        android:text="@string/popup_help_button_text"
        style="@style/ButtonColor"
        android:layout_below="@+id/popup_help_text" />

</RelativeLayout>