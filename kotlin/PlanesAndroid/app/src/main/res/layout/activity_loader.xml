<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoaderActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/feature_graphic_vertical"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop">
    </ImageView>
    <RelativeLayout
        android:id="@+id/loader_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/singleplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singleplayergame"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            style="@style/ButtonColor"/>
        <Button
            android:id="@+id/multiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplayergame"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/singleplayer"
            android:textSize="15sp"
            style="@style/ButtonColor"/>
        </RelativeLayout>
    <ProgressBar
        android:id="@+id/ProgressBarBottom"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:foregroundTint="?planesProgressBarColor"
        android:progressTint="?planesProgressBarColor"
        android:indeterminateTint="?planesProgressBarColor"
        android:visibility="invisible"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/LoaderLabelBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_gravity="bottom"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/CustomTextViewStyle"
        android:text="@string/loader_text"
        android:visibility="invisible"/>

</FrameLayout>