<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightGreen500</item>
        <item name="colorOnPrimary">@color/colorAmber900</item>
        <item name="colorPrimaryDark">@color/colorLightGreen700</item>
        <item name="colorAccent">@color/colorAmber200</item>
        <item name="colorControlHighlight">@color/colorLightGreen100</item>
        <item name="colorButtonNormal">@color/colorLightGreen600</item>
        <item name="colorControlActivated">@color/colorLightGreen400</item>

        <item name="planesToolbarForegroundColor">@color/colorAmber200</item>
        <item name="planesToolbarBackgroundColor">@color/colorLightGreen400</item>
        <item name="planesBackgroundStartColor">@color/colorAmber500</item>
        <item name="planesBackgroundEndColor">@color/colorLightGreen700</item>
        <item name="planesGameButtonBackgroundColor">@color/colorLightGreen700</item>
        <item name="planesGameButtonHighlightedBackgroundColor">@color/colorLightGreenA700</item>
        <item name="planesGameButtonForegroundColor">@color/colorAmber100</item>
        <item name="planesTextColor">@color/colorAmber700</item>
        <item name="planesNavigationMenuTextColor">@color/colorAmberA100</item>
        <item name="planesNavigationMenuBackgroundColor">@color/colorLightGreen400</item>
        <item name="planesProgressBarColor">@color/aqua</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">?planesGameButtonForegroundColor</item>
        <item name="android:background">?planesGameButtonBackgroundColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="gc_background_color">?planesGameButtonBackgroundColor</item>
        <item name="gc_foreground_color">?planesGameButtonForegroundColor</item>
    </style>

    <style name="HighlightedButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">?planesGameButtonForegroundColor</item>
        <item name="android:background">?planesGameButtonHighlightedBackgroundColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="gc_background_color">?planesGameButtonHighlightedBackgroundColor</item>
        <item name="gc_foreground_color">?planesGameButtonForegroundColor</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">?planesToolbarForegroundColor</item>
        <item name="android:textColorSecondary">?planesToolbarForegroundColor</item>
        <item name="android:background">?planesToolbarBackgroundColor</item>
    </style>

    <style name="CustomTextViewStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">?planesTextColor</item>
    </style>

    <style name="NavigationTextViewStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">?planesNavigationMenuTextColor</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="itemTextColor">?planesNavigationMenuTextColor</item>
        <item name="itemIconTint">?planesNavigationMenuTextColor</item>
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>


</resources>