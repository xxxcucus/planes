<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="settingsData" type="com.planes.android.gamestats.GameStatsViewModel"/>
    </data>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?planesBackgroundEndColor"
            android:id="@+id/status_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:textStyle="bold"
                    android:text="@={settingsData.m_LoginStatus}"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                     style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_UserName}"/>
                <Button
                    android:id="@+id/status_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/ButtonColor"
                    android:layout_gravity="right"
                    android:text="@string/login"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_ConnectStatus}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_GameName}"/>
                <Button
                    android:id="@+id/status_connect_to_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dip"
                    style="@style/ButtonColor"
                    android:text="@string/connectto_game"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/status_opponent"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?planesBackgroundEndColor"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/opponent_stats1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_OpponentName}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/status_current_round"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?planesBackgroundEndColor"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/current_round"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_RoundId}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/status_round_status"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?planesBackgroundEndColor"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:textStyle="bold"
                    android:text="@string/round_status"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    style="@style/CustomTextViewStyle"
                    android:text="@={settingsData.m_GameStage}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/status_gamestats"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?planesBackgroundEndColor"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/game_stats"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:textStyle="bold"
                        android:text="@string/player_moves"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_PlayerMoves}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="?planesBackgroundEndColor"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:text="@string/player_misses"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:text="@={settingsData.m_PlayerMisses}"
                        style="@style/CustomTextViewStyle"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:textStyle="bold"
                        android:text="@string/player_hits"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_PlayerHits}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:textStyle="bold"
                        android:text="@string/player_dead"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_PlayerDead}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/opponent_moves"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_OpponentMoves}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/opponent_misses"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_OpponentMisses}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/opponent_hits"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_OpponentHits}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/opponent_dead"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_OpponentDead}"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/status_game_score"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?planesBackgroundEndColor"
                android:layout_margin="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/game_score"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/player_wins"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_PlayerWins}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/opponent_wins"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_OpponentWins}"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?planesBackgroundEndColor"
                    android:layout_margin="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        style="@style/CustomTextViewStyle"
                        android:text="@string/draws"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:textSize="20dp"
                        style="@style/CustomTextViewStyle"
                        android:text="@={settingsData.m_Draws}"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
