<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_background_start">

    <TextView
        android:id="@+id/credits_software_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/credits_software_title"/>

    <TextView
        android:id="@+id/credits_software_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="8dp"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/credits_software_title"
        app:layout_constraintStart_toStartOf="@id/credits_software_title"
        android:text="@string/credits_software_content"/>

    <Button
        android:id="@+id/credits_software_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/credits_software_content"
        app:layout_constraintEnd_toEndOf="@id/credits_software_content"
        android:layout_below="@+id/credits_software_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/credits_software_button"/>

    <TextView
        android:id="@+id/credits_graphics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/credits_graphics_title"
        app:layout_constraintTop_toBottomOf="@id/credits_software_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/credits_graphics_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="8dp"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/credits_graphics_title"
        app:layout_constraintStart_toStartOf="@id/credits_graphics_title"
        android:text="@string/credits_graphics_content"/>

    <Button
        android:id="@+id/credits_graphics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/credits_graphics_content"
        android:layout_below="@+id/credits_graphics_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/credits_graphics_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
