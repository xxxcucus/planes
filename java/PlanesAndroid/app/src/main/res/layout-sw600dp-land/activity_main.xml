<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@drawable/background"
    android:tag="tablet horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        />
    <com.planes.android.PlanesVerticalLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/planes_layout">
        <com.planes.android.GameBoard
            android:id="@+id/player_board"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            />
        <com.planes.android.GameBoard
            android:id="@+id/computer_board"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            />
        <!-- Buttons for board editing stage -->
        <Button
            android:id="@+id/up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="1"
            app:gc_col="2"
            app:gc_game_stage="0"
            android:text="@string/up_button"/>
        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="1"
            app:gc_game_stage="0"
            android:text="@string/left_button"/>
        <Button
            android:id="@+id/rotate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="2"
            app:gc_game_stage="0"
            android:text="@string/rotate_button"/>
        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="3"
            app:gc_game_stage="0"
            android:text="@string/right_button"/>
        <Button
            android:id="@+id/down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="3"
            app:gc_col="2"
            app:gc_game_stage="0"
            android:text="@string/down_button"/>
        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="4"
            app:gc_game_stage="0"
            android:text="@string/done_button" />

        <!-- Buttons for start new game stage -->
        <Button
            android:id="@+id/view_computer_board2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_computer_board"
            app:gc_row="1"
            app:gc_col="1"
            app:gc_game_stage="2"
            android:enabled="true"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/view_player_board2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="1"
            app:gc_game_stage="2"
            android:text="@string/view_player_board"
            android:enabled="false"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/start_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="3"
            app:gc_col="1"
            app:gc_game_stage="2"
            android:text="@string/start_new_game"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/winner_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="1"
            app:gc_col="2"
            app:gc_game_stage="2"
            android:text="@string/computer_winner"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/computer_wins_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="2"
            app:gc_game_stage="2"
            android:text="@string/computer_wins"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/computer_wins_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="2"
            app:gc_col="3"
            app:gc_game_stage="2"
            android:text="0"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/player_wins_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="3"
            app:gc_col="2"
            app:gc_game_stage="2"
            android:text="@string/player_wins"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/player_wins_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gc_row="3"
            app:gc_col="3"
            app:gc_game_stage="2"
            android:text="0"
            android:textSize="20dp"/>
    </com.planes.android.PlanesVerticalLayout>
</LinearLayout>